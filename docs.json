{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "palm",
  "name": "Zylon",
  "colors": {
    "primary": "#796ABF",
    "light": "#796ABF",
    "dark": "#E8C468"
  },
  "description": "The truly Private AI platform for the Enterprise\nThe only self-contained and ready-to-go AI platform that runs in your own servers, allowing you to maintain data sovereignty",
  "favicon": "/favicon.png",
  "styling": {
    "eyebrows": "breadcrumbs"
  },
  "appearance": {
    "default": "light"
  },
  "background": {
    "decoration": "gradient"
  },
  "contextual": {
    "options": [
      "copy"
    ]
  },
  "api": {
    "playground": {
      "display": "simple"
    },
    "examples": {
      "languages": [
        "curl",
        "python",
        "javascript"
      ],
      "defaults": "required"
    }
  },
  "navigation": {
    "dropdowns": [
      {
        "dropdown": "ZylonGPT API",
        "icon": "code",
        "openapi": "/api-reference/pgpt.json"
      },
      {
        "dropdown": "Workspace API",
        "icon": "code",
        "openapi": "/api-reference/workspace.json"
      }
    ]
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:dev@zylon.ai"
      }
    ],
    "primary": {
      "label": "Request a Demo",
      "href": "https://cal.com/zylon/demo?source=docs",
      "type": "button"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/zylonprivategpt",
      "github": "https://github.com/zylon-ai",
      "linkedin": "https://www.linkedin.com/company/zylon-privategpt/"
    }
  }
}
