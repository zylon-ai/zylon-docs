{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "palm",
  "name": "Zylon",
  "colors": {
    "primary": "#796ABF",
    "light": "#796ABF",
    "dark": "#E8C468"
  },
  "description": "The truly Private AI platform for the Enterprise\nThe only self-contained and ready-to-go AI platform that runs in your own servers, allowing you to maintain data sovereignty",
  "favicon": "/favicon.png",
  "styling": {
    "eyebrows": "breadcrumbs"
  },
  "appearance": {
    "default": "light"
  },
  "background": {
    "decoration": "gradient"
  },
  "contextual": {
    "options": [
      "copy"
    ]
  },
  "api": {
    "playground": {
      "display": "simple"
    },
    "examples": {
      "languages": [
        "curl",
        "python",
        "javascript"
      ],
      "defaults": "required"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Operator Manual",
        "icon": "wrench",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "operator-manual/index"
            ]
          },
          {
            "group": "Installation",
            "pages": [
              "operator-manual/hardware-requirements",
              "operator-manual/install",
              "operator-manual/ports-and-dns",
              "operator-manual/troubleshoot",
              "operator-manual/uninstall",
              "operator-manual/backup",
              "operator-manual/openid",
              {
                "group": "Knowledge Base",
                "pages": [
                  "operator-manual/knowledge-base/sharepoint",
                  "operator-manual/knowledge-base/confluence",
                  "operator-manual/knowledge-base/file-system",
                  "operator-manual/knowledge-base/claromentis"
                ]
              }
            ]
          }
        ]
      },
      {
        "tab": "Developer Platform",
        "icon": "code",
        "groups": [
          {
            "group": "API Documentation",
            "icon": "book",
            "pages": [
              "api-reference/how-to-use"
            ]
          },
          {
            "group": "ZylonGPT API",
            "icon": "terminal",
            "openapi": "/api-reference/pgpt.json"
          },
          {
            "group": "Workspace API",
            "icon": "terminal",
            "openapi": "/api-reference/workspace.json"
          }
        ]
      },
      {
        "tab": "Changelog",
        "icon": "list",
        "pages": [
          "changelog/index"
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:dev@zylon.ai"
      }
    ],
    "primary": {
      "label": "Request a Demo",
      "href": "https://cal.com/zylon/demo?source=docs",
      "type": "button"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/zylonprivategpt",
      "github": "https://github.com/zylon-ai",
      "linkedin": "https://www.linkedin.com/company/zylon-privategpt/"
    }
  },
  "errors": {
    "404": {
      "redirect": false
    }
  }
}
